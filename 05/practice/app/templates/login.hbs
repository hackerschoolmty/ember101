<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h1>Login</h1>
    <form {{action 'authenticate' on='submit'}}>
      <div class="form-group">
        <label>Email</label>
        {{input class="form-control" id="email" value=identification placeholder='Email'}}
      </div>
      <div class="form-group">
        <label>Password</label>
        {{input class="form-control" id="password" value=password placeholder='Contraseña' type='password'}}
      </div>
      <div>
        <button class="btn btn-primary btn-lg btn-block">Iniciar sesión</button>
      </div>
    </form>
  </div>
</div>
